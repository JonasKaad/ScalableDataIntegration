@page "/graphs"
<PageTitle>SkyPanel — Graphs</PageTitle>

<MudText Typo="Typo.h2" GutterBottom="true">Graphs</MudText>
<MudText Typo="Typo.h4" Class="mb-8">This page demonstrates fake loading and displaying a graph.</MudText>

@if (_fakeLoading == false)
{
    <MudProgressCircular Color="Color.Info" Indeterminate="true" Size="Size.Large" />
}
else
{
    <MudImage ObjectPosition="ObjectPosition.Center" Src="images/graph.png" Height="400" Width="400"/>
}

@code {
    private bool _fakeLoading;

    protected override async Task OnInitializedAsync()
    {
        // Simulate asynchronous loading to demonstrate a loading indicator
        await Task.Delay(1500);
        _fakeLoading = true;
    }

}
