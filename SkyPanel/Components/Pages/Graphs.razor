@page "/graphs"
<PageTitle>Graphs</PageTitle>

<MudText Typo="Typo.h3" GutterBottom="true">Graphs</MudText>
<MudText Typo="Typo.h2" Class="mb-8">This opoks demonstrates fake loading and displaying a graph.</MudText>

@if (_fakeLoading == false)
{
    <MudProgressCircular Color="Color.Default" Indeterminate="true" />
}
else
{
    <MudImage ObjectPosition="ObjectPosition.Center" Src="images/graph.png" Height="400" Width="400"/>
}

@code {
    private bool _fakeLoading;

    protected override async Task OnInitializedAsync()
    {
        // Simulate asynchronous loading to demonstrate a loading indicator
        await Task.Delay(500);
        _fakeLoading = true;
    }

}
